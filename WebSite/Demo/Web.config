<?xml version="1.0"?>
<configuration>
  <system.web>
    <compilation targetFramework="4.0" debug="true">

      <buildProviders>
        <add extension=".htm" type="Ivony.Html.Web.HtmlBuildProvider, Ivony.Html.Web" />
        <add extension=".html" type="Ivony.Html.Web.HtmlBuildProvider, Ivony.Html.Web" />
      </buildProviders>

    </compilation>

  </system.web>

  <system.webServer>

    <handlers>
      <add name="htmlFile" path="*.html" verb="*"/>
    </handlers>

    <modules>
      <add name="HtmlRewrite" type="Ivony.Html.Web.HtmlRewriteModule, Ivony.Html.Web"/>
      <add name="HtmlBinding" type="Ivony.Html.Binding.HtmlBindingModule, Ivony.Html.Web"/>
    </modules>
  </system.webServer>

</configuration>